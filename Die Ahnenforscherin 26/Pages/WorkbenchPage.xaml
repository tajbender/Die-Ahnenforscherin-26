<?xml version="1.0" encoding="utf-8"?>
<Window
    x:Class="Die_Ahnenforscherin_26.Pages.WorkbenchPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Die_Ahnenforscherin_26.Pages"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Title="WorkbenchPage">

    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>

    <Grid>
        <Border Background="{ThemeResource SystemControlBackgroundAltHighBrush}"
                CornerRadius="12"
                Padding="20"
                Margin="20">
            <StackPanel Spacing="10">
                <TextBlock Text="Workbench"
                           FontSize="24"
                           FontWeight="Bold" />
                <TextBlock Text="This is the workbench page where users can manage their projects."
                           TextWrapping="Wrap" />
                <Button Content="Create New Project"
                        Width="200"
                        Height="40" />
                <Button Content="Open Existing Project"
                        Width="200"
                        Height="40" />
            </StackPanel>
        </Border>
    </Grid>
</Window>
