<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Die_Ahnenforscherin_26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Die_Ahnenforscherin_26"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Die Ahnenforscherin 26">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar Title="Die Ahnenforscherin"
                  Subtitle="Debug - vorschauversion"
                  IsBackButtonVisible="True"
                  IsPaneToggleButtonVisible="True">
            <TitleBar.IconSource>
                <!-- TODO: Fix Width -->
                <ImageIconSource ImageSource="Icons\Logo for a genealogy.png" />
            </TitleBar.IconSource>
            <TitleBar.Content>
                <AutoSuggestBox HorizontalAlignment="Stretch"
                                PlaceholderText="Suche im Stammbaum, nach Anleitungen oder Hilfe..."
                                QueryIcon="Find"
                                VerticalAlignment="Stretch" />
            </TitleBar.Content>
            <TitleBar.RightHeader>
                <PersonPicture Height="Auto"
                               Initials="n/a"
                               Width="Auto" />
            </TitleBar.RightHeader>
        </TitleBar>
        <Frame Grid.Row="1"
               x:Name="ContentFrame"></Frame>
    </Grid>
</Window>
