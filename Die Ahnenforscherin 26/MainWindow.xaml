<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Die_Ahnenforscherin_26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Die_Ahnenforscherin_26"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Die Ahnenforscherin 26">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar Title="Die Ahnenforscherin"
                  Subtitle="Vorschau"
                  IsBackButtonVisible="True"
                  IsPaneToggleButtonVisible="True">
            <TitleBar.IconSource>
                <ImageIconSource ImageSource="Icons\Logo for a genealogy.png" />
            </TitleBar.IconSource>
            <TitleBar.Content>
                <AutoSuggestBox Width="420"
                                VerticalAlignment="Center"
                                PlaceholderText="Durchsuche meinen Stammbaum nach..."
                                QueryIcon="Find" />
            </TitleBar.Content>
            <TitleBar.RightHeader>
                <PersonPicture Width="30"
                               Height="30"
                               Initials="taj" />
            </TitleBar.RightHeader>
        </TitleBar>
        <Frame Grid.Row="1"
               x:Name="ContentFrame" />
    </Grid>
</Window>
