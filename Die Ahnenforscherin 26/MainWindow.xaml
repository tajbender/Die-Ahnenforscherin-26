<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Die_Ahnenforscherin_26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Die_Ahnenforscherin_26"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Die Ahnenforscherin 26">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar Title="Die Ahnenforscherin"
                  Subtitle="Debug-Version"
                  IsBackButtonVisible="False"
                  IsPaneToggleButtonVisible="False"
                  Height="48">
            <TitleBar.IconSource>
                <!-- TODO: Fix Width -->
                <ImageIconSource ImageSource="/Assets/Logo for Genealogy.png" />
            </TitleBar.IconSource>
            <TitleBar.Content>
                <AutoSuggestBox HorizontalAlignment="Stretch"
                                PlaceholderText="Suche im Stammbaum, nach Anleitungen oder Hilfe..."
                                QueryIcon="Find"
                                VerticalAlignment="Stretch" />
            </TitleBar.Content>
            <TitleBar.RightHeader>
                <PersonPicture Height="Auto"
                               Initials="n/a"
                               Width="Auto" />
            </TitleBar.RightHeader>
        </TitleBar>
        <NavigationView x:Name="NavigationView"
                        Grid.Row="1"
                        Header="Die Ahnenforscherin"
                        IsSettingsVisible="True"
                        PaneDisplayMode="Left"
                        SelectionChanged="NavigataionView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Browse"
                                    Tag="SamplePage1"
                                    Icon="Library" />
                <NavigationViewItem Content="Track an Order"
                                    Tag="SamplePage2"
                                    Icon="Map" />
                <NavigationViewItem Content="Order History"
                                    Tag="SamplePage3"
                                    Icon="Tag" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Account"
                                    Tag="SamplePage4"
                                    Icon="Contact" />
                <NavigationViewItem Content="Your Cart"
                                    Tag="SamplePage5"
                                    Icon="Shop" />
                <NavigationViewItem Content="Help"
                                    Tag="SamplePage5"
                                    Icon="Help" />
            </NavigationView.FooterMenuItems>
            <ScrollViewer>
                <Frame x:Name="ContentFrame">
                    <Frame.Background>
                        <SolidColorBrush Color="MediumVioletRed" />
                    </Frame.Background>
                </Frame>
            </ScrollViewer>
        </NavigationView>
    </Grid>
</Window>
