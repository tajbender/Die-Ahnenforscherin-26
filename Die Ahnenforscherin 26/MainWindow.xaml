<?xml version="1.0" encoding="utf-8"?>
<Window x:Class="Die_Ahnenforscherin_26.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="using:Die_Ahnenforscherin_26"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Die Ahnenforscherin 26">
    <Window.SystemBackdrop>
        <MicaBackdrop />
    </Window.SystemBackdrop>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TitleBar Title="Die Ahnenforscherin"
                  Subtitle="Debug-Version"
                  IsBackButtonVisible="False"
                  IsPaneToggleButtonVisible="False"
                  Height="48">
            <TitleBar.IconSource>
                <!-- TODO: Fix Width -->
                <ImageIconSource ImageSource="/Assets/Logo for Genealogy.png" />
            </TitleBar.IconSource>
            <TitleBar.Content>
                <AutoSuggestBox HorizontalAlignment="Stretch"
                                PlaceholderText="Suche im Stammbaum, nach Anleitungen oder Hilfe..."
                                QueryIcon="Find"
                                VerticalAlignment="Stretch" />
            </TitleBar.Content>
            <TitleBar.RightHeader>
                <PersonPicture Height="Auto"
                               Initials="n/a"
                               Width="Auto" />
            </TitleBar.RightHeader>
        </TitleBar>
        <NavigationView x:Name="NavigationView"
                        Grid.Row="1"
                        Header="Die Ahnenforscherin"
                        IsSettingsVisible="False"
                        PaneDisplayMode="Left"
                        SelectionChanged="NavigataionView_SelectionChanged">
            <NavigationView.MenuItems>
                <NavigationViewItem Content="Start"
                                    Tag="SamplePage1"
                                    Icon="Library" />
                <NavigationViewItem Content="Back 2 the past"
                                    Tag="SamplePage2"
                                    Icon="Map" />
                <NavigationViewItem Content="Back 2 the past"
                                    Tag="SamplePage3"
                                    Icon="Tag" />
            </NavigationView.MenuItems>
            <NavigationView.FooterMenuItems>
                <NavigationViewItem Content="Benutzer"
                                    Tag="SamplePage4"
                                    Icon="Contact" />
                <NavigationViewItem Content="Clipboard"
                                    Tag="SamplePage4"
                                    Icon="XboxOneConsole" />
                <NavigationViewItem Content="Datenbank"
                                    Tag="SamplePage5"
                                    Icon="GlobalNavigationButton" />
                <NavigationViewItem Content="Hilfe mir!..."
                                    Tag="SamplePage5"
                                    Icon="Help" />
                <NavigationViewItem Content="Optionen"
                                    Tag="SamplePage5"
                                    Icon="Setting" />
            </NavigationView.FooterMenuItems>
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="3*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>
                <ScrollViewer x:Name="LeftSidebar"
                              Grid.Column="0">
                    <Frame x:Name="ContentFrameLeft">
                        <Frame.Background>
                            <SolidColorBrush Color="AliceBlue" />
                        </Frame.Background>
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center">
                            <TextBlock Text="Willkommen zur Debug-Version der Ahnenforscherin!"
                                       FontSize="24"
                                       FontWeight="Bold" />
                            <Image Source="/Assets/SantaBenderBreakInPrison.jpg" />
                        </StackPanel>
                    </Frame>
                </ScrollViewer>
                <CommandBar Grid.Column="1"
                            Background="Transparent"
                            IsOpen="False"
                            DefaultLabelPosition="Right">
                    <AppBarButton Icon="Add"
                                  Label="Add" />
                    <AppBarButton Icon="Edit"
                                  Label="Edit" />
                    <AppBarButton Icon="Share"
                                  Label="Share" />
                    <CommandBar.SecondaryCommands>
                        <AppBarButton Icon="Setting"
                                      Label="Settings">
                            <AppBarButton.KeyboardAccelerators>
                                <KeyboardAccelerator Modifiers="Control"
                                                     Key="I" />
                            </AppBarButton.KeyboardAccelerators>
                        </AppBarButton>
                    </CommandBar.SecondaryCommands>
                </CommandBar>
                <ScrollViewer x:Name="RightContentFrameViewer"
                              Grid.Column="2">
                    <Frame x:Name="RightContentFrame">
                        <Frame.Background>
                            <SolidColorBrush Color="DarkViolet" />
                        </Frame.Background>
                        <StackPanel Orientation="Vertical"
                                    HorizontalAlignment="Center">
                            <CommandBar Grid.Column="1"
                                        Background="Transparent"
                                        IsOpen="False"
                                        DefaultLabelPosition="Right">
                                <AppBarButton Icon="Add"
                                              Label="Add" />
                                <AppBarButton Icon="Edit"
                                              Label="Edit" />
                                <AppBarButton Icon="Share"
                                              Label="Share" />
                                <CommandBar.SecondaryCommands>
                                    <AppBarButton Icon="Setting"
                                                  Label="Settings">
                                        <AppBarButton.KeyboardAccelerators>
                                            <KeyboardAccelerator Modifiers="Control"
                                                                 Key="I" />
                                        </AppBarButton.KeyboardAccelerators>
                                    </AppBarButton>
                                </CommandBar.SecondaryCommands>
                            </CommandBar>
                            <TextBlock Text="Willkommen zur Debug-Version der Ahnenforscherin!"
                                       FontSize="24"
                                       FontWeight="Bold" />
                            <Image Source="/Assets/SantaBenderBreakInPrison.jpg" />
                        </StackPanel>
                    </Frame>
                </ScrollViewer>
            </Grid>
        </NavigationView>
    </Grid>
</Window>
